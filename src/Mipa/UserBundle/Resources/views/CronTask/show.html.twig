{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CronTask</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Commands</th>
                <td>{{ entity.commands }}</td>
            </tr>
            <tr>
                <th>Interval</th>
                <td>{{ entity.interval }}</td>
            </tr>
            <tr>
                <th>Lastrun</th>
                <td>{{ entity.lastrun|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mipa_cron') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('mipa_cron_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
