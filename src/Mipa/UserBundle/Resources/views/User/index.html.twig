{% extends 'MipaUserBundle::layout.html.twig' %}


{% block content %}
    <h1>User list</h1>

	<div class="count">
		{{ entity.getTotalItemCount }}
	</div>
	
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                <th>{% if pagination.isSorted('a.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Name', 'a.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Gender', 'a.gender') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Address', 'a.address') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Email', 'a.email') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('mipa_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mipa_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mipa_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	
	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>

    {% endblock %}
